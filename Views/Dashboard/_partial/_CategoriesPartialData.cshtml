@{
}


<div class="row mt-5">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <table class="table text-center">
                    <thead>
                        <tr class="text-center">
                            <td>رقم الفئة</td>
                            <td>اسم الفئة</td>
                            <td>وصف الفئة</td>
                            <td>الايقونة</td>
                            <td>الرابط</td>
                            <td class="text-center" colspan="2">إجراء</td>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.Icon</td>
                                    <td>@item.Url</td>
                                    <td>
                                        <a onclick="showmessage(@item.Id)"> <i class="fa fa-trash text-danger" aria-hidden="true"></i></a>

                                    </td>
                                    <td>

                                        <a asp-action="EditCategories" asp-route-id="@item.Id">  <i class="fa fa-pencil text-success" aria-hidden="true"></i></a>


                                    </td>
                                </tr>
                            }

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
