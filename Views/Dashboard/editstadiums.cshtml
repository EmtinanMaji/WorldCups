@model Stadiums
@{
	Layout = "~/Views/Shared/_LayoutsAdmin.cshtml";
}
<div class="container">
	<div class="row mt-5">
		<div class="col">
			<div class="card mt-5">
				<div class="card-bady">
					<form asp-action="CreateNewStadiums" method="post" enctype="multipart/form-data">
						<div class="row">
							<input type="hidden" asp-for="@Model.Id" />
							<div class="col">
								<label class="form-label">اسم الملعب</label>
								<input type="text" asp-for="@Model.Name" class="form-control" />

							</div>
							<div class="col">
								<label class="form-label">سعة الملعب</label>
								<input type="text" asp-for="@Model.Capacity" class="form-control" />

							</div>
						</div>
						<div class="row">
							<div class="col">
								<label class="form-label">نوع الملعب</label>
								<input type="text" asp-for="@Model.Type" class="form-control" />

							</div>
							<div class="col">
								<label class="form-label">مسؤول الملعب</label>
								<input type="text" asp-for="@Model.Owner" class="form-control" />

							</div>
							<div class="col">
								<label class="form-label">مساحة الملعب</label>
								<input type="text" asp-for="@Model.Space" class="form-control" />

							</div>
						</div>
						<div class="row">
							<div class="col">
								<label class="form-label">موقع الملعب</label>
								<input type="text" asp-for="@Model.City" class="form-control" />

							</div>
							<div class="col">
								<label class="form-label">وقت افتتاح الملعب</label>
								<input type="date" asp-for="@Model.ConstractionDate" class="form-control" />

							</div>
						</div>
						<div class="row">
							<div class="col">
								<label class="form-label">صورة الملعب</label>
								<input type="file" name="photo" class="form-control" />

							</div>
							<div class="col">
								<label class="form-label">مرافق اضافية</label>
								<input type="text" asp-for="@Model.Facilities" class="form-control" />

							</div>
						</div>


						<div class="row mt-3">

							<div class="col">
								<button class="btn btn-primary">حفظ</button>
							</div>
						</div>
						
					</form>

				</div>
			</div>
		</div>
	</div>
</div>