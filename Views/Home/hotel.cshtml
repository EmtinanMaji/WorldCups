@model IEnumerable<Hotel>

@{
    ViewData["Title"] = "Hotel Page";
}

<div class="container mt-5">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header p-0 position-relative">
                        <a href="#">
                            <img src="/images/@item.Images" class="card-img-top img-fluid" alt="@item.Name">
                        </a>
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title mb-2">@item.Name</h5>
                        <p class="text-muted small">@item.City</p>
                        <p class="text-danger fw-bold mb-2">@item.Price.ToString("C")</p>
                        <div class="rating mb-3">
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-muted"></i>
                        </div>
                        <a asp-controller="Booking" asp-action="Create" asp-route-hotelId="@item.Id" class="btn btn-success btn-sm">
                            Booking
                        </a>
                        
                    </div>
                </div>
            </div>
        }
    </div>
</div>
